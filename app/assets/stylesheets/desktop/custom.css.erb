body {
  background: <%= image_tag "lassy_fabric.png" %>;
}
.wrapper {width: 960px; height: 500px;}
.head-spread {
  background: #333 <%= image_tag "public-restroom2.jpg" %> no-repeat center bottom;
  background-origin: padding-box;
  background-size: cover;
  width: 100%;
  height: 430px;
  z-index: -10;
  min-width: 1050px;
border-bottom: 5px solid #333;
}

.middle-info {
	height: 400px;
	width: 1020px;
	margin: 50px auto;
	border-top: 1px dotted #666;
}

.promo-vid {
	margin-left: 30px;
	margin-top: 42px;
	border: transparent solid 0px;
	box-shadow: 1px 1px 1px 1px #333;
}
.about {
	height: auto;
	background: #333;
	padding: 30px;
	margin-right: 30px;
	margin-top: 50px;
	border-radius: 5px;
	box-shadow: inset 0 0 4px #111;

}

.about:hover {background-color: #404040; -webkit-transition: all 0.3s ease-in-out;
	-moz-transition: all 0.6s ease-in-out;
	-o-transition: all 0.6s ease-in-out;
	transition: all 1.6s ease-in-out;
	}

.about h1{
	font-size: 20px;
	padding-bottom: 20px;
	color: #c48241;
	border-bottom: 1px solid #ddd;
}
.about p {
	color: #ccc;
	font-size: 15px;
	line-height: 24px;
	display: block;
	font-weight: 200;
	margin-top: 10px;
	height: 200px;
}

#stickers-link {position: relative; top: 50px; left: -50px;}

.presentation {
	width: 100%;
	min-width: 1050px;
	height: 600px;
	margin: 0 auto;
	background: #eee;
	border-top: 10px solid #eee;
	border-bottom: 2px dotted #222;
	margin-right: -50px;
}
.mobile-ish {width: 960px; height: 600px; margin: 0px auto;}

.mobile-ish h1 {font-style: italic; color: #666; font-weight: 200; text-align: center; padding: 15px 0; border-bottom: 1px solid #ccc;}

.quotes {height: 450px; background: #ccc; box-shadow: inset 0 0 6px #999; border-radius: 5px; margin-top: 30px; width: 300px; margin-left: 20px;float: left;}
.quotes p {font-size: 14px; font-weight: 200; padding: 0 20px; margin-bottom: 15px; line-height: 22px;}
.quotes h5 {text-align: center; margin-top: 15px; font-size: 16px;}
.quotes h6 {font-size: 13px; font-weight: 200 italic; padding: 20px; margin-right: 10px; font-style: italic;}

.mobile-ish img { float: left; margin-top: 30px; margin-left: 40px; border-radius: 5px;}

.footer-spread {
  background: #333 <%= image_tag "graffiti2.jpg" %> no-repeat bottom;
  background-origin: padding-box;
  background-size: cover;
  min-width:1050px;
  width: 100%;
  height: 300px;
  z-index: -10;
}

.blocker {position: absolute; width: 15%; height: 50px; background: black; margin: 200px 0;}


footer.foot {position: absolute;
 width: auto;
 height: 50px;
 display: block;
 background-color: rgba(0,0,0,0.3);
 margin-top: 200px;
 margin-left: 15%;
 padding: 0px 40px;
}

footer span {color: white;text-align: center; line-height: 50px; font-weight: 200; font-size: 12px;}

.hero-unit {
  padding: 40px;
  width:960px;
  margin: auto;
  background-color: rgba(255,255,255,0.1);
  filter: alpha(opacity=80);
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 5px;
  margin-top: -323px;
  height: 500px;}

.hero-unit h1 {
	font-family: "GE Inspira", "helvetica neue";
  margin-bottom: 0;
  font-size: 65px;
  font-weight: 500;
  line-height: 1;
  color: #333;
  letter-spacing: -1px;
 text-align: center;
  text-shadow: 1px 1px 0px #444;
  display: block;
  margin-left: 150px;
}

.hero-unit p {
  font-size: 16px;
  line-height: 22px;
  color: #444;
  font-weight: 200;
  margin-top: 42px;
  background-color: rgba(255,255,255,0.6);
  padding: 20px;
  display: block;
	border: 2px solid #ddd;
	height: 273px;
  }

.credits { float: right; color: #555; z-index: 100;}
.credits a { color: #777;}

a {
  color: #c48241;
  text-decoration: none; }

a:hover {
  color: #c48241;
  text-decoration: underline; }

.navbar .brand:hover {
  color: #c48241; }

.navbar .nav > li > a {
  font-weight: bold;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5); }

.navbar .nav .active > a {
  background-color: transparent;
  color: #333333; }

.navbar .nav .active > a:hover {
  background-color: transparent;
  color: #c48241; }

.navbar .nav > li > a:hover, .navbar .nav li.open.dropdown .dropdown-toggle {
  color: #c48241; }












