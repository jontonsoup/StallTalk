<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :poopstation_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :poopstation_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stalltalkian_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :stalltalkian_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :location_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
