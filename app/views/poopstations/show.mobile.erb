<%= render :partial => 'posts/form' %>
<%= link_to "Tell Us About This Stall", edit_poopstation_path(@poopstation), "data-role" => "button", "data-mini" =>"true" %>
<br>
<hr>
<br>
<ul data-role="listview">
    <% if @poopstation.posts.empty? %>
    <li data-icon="false"> Looks like there are no posts. Be the first to leave your mark!</li>
    <% end %>

    <% @poopstation.posts.each do |post|%>

    <% if session[post.id] != true %>
    <li data-icon="star">

        <%= link_to post.text, '/like/' + @poopstation.id.to_s + '/' + post.id.to_s + '/', "data-icon" => "star", "data-iconpos" => "right" %>
        <%# post.text %>

        <div class = "ui-li-count"><%= post.likes %></div>



    </li>
    <% else %>
    <li data-icon="false">

        <a><%= post.text %></a>
        <div class = "ui-li-count"><%= post.likes %></div>

        <!-- <div class = "ui-li-count"><%# post.likes %></div> -->



    </li>
    <% end %>
    <% end %>
</ul>
<br>


