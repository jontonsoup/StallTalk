<%- model_class = Poopstation.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sticker_type) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:stalltalkian_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @poopstations.each do |poopstation| %>
      <tr>
        <td><%= link_to poopstation.id, poopstation_path(poopstation) %></td>
        <td><%= poopstation.sticker_type %></td>
        <td><%= poopstation.gender %></td>
        <td><%= poopstation.stalltalkian_id %></td>
        <td><%= poopstation.location_id %></td>
        <td><%=l poopstation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_poopstation_path(poopstation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      poopstation_path(poopstation),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_poopstation_path %>
