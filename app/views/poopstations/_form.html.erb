<%= form_for @poopstation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :sticker_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sticker_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gender, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stalltalkian_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :stalltalkian_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :location_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                poopstations_path, :class => 'btn' %>
  </div>
<% end %>
